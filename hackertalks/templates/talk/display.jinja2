{% extends "base.jinja2" %}

{% block title -%}
	{{ c.talk.title }}
{%- endblock title %}

{% block content -%}
	<div id="feat_box" class="talk">
        <div style="text-align: center;" id="talk_container">
            {{ c.talk.video_embedcode }}
        </div>
	</div>
    <div id="sheet_container" class="container">
        <div class="sheet">
			<h2>
                <a href="{{ c.talk.url }}">
                    {{ c.talk.title }}
                </a>
			</h2>
			<div class="speakers">
                {% for x in c.talk.speakers %}
                    {{x.name}} {{x.job_title or ''}}<br />
                {% endfor %}
			</div>
            <div class="desc">
                {{ h.markdown(c.talk.description) }}
            </div>
            {% if c.talk.conference %}
            <div class="conference">
                Held at {{c.talk.conference}}<br />
                {% if c.talk.recording_date %}
                    on {{c.talk.recording_date}}
                {% endif %}
            </div>
            {% endif %}
            <div class="license">
                <img src="{{c.talk.license.thumbnail}}" alt="{{c.talk.license.name}}" />
            </div>
        </div>
    </div>
    <div id="lightbulb_container" onclick="lights.toggle();">
    </div>
{%- endblock content %}

