{% extends "base.jinja2" %}

{% block title -%}
	{{ c.talk.title }}
{%- endblock title %}

{% block content -%}
	<div id=feat_box>
		<div class=container>
			<div class=feat_preview>
				{{ c.talk.video_embedcode }}
			</div>
		</div>
	</div>
    <div id="sheet_container" class="container">
    <div class="sheet">
			<h2>
                <a href="{{ c.talk.url }}">
                    {{ c.talk.title }}
                </a>
			</h2>
			<div class=feat_info>
                {% for x in c.talk.speakers %}
                    {{x.name}} {{x.job_title or ''}}<br />
                {% endfor %}
			</div>
            <div>
                {{c.talk.description}}
            </div>
            {% if c.talk.conference %}
            <div>
                Held at {{c.talk.conference}}<br />
                {% if c.talk.recording_date %}
                    on {{c.talk.recording_date}}
                {% endif %}
            </div>
            {% endif %}
            <div>
                <img src="{{c.talk.license.thumbnail}}" alt="{{c.talk.license.name}}" />
            </div>
    </div>
    </div>
{%- endblock content %}

