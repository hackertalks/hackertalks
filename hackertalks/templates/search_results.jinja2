{% extends "base.jinja2" %}

{% block title %}Search results{% endblock %}

{% block content %}
	<div class=container id=sheet_container>
		<div class=sheet>
			
			{% for talk in c.search_results -%}
				<div class=result_preview>
					<img src='{{ talk.thumbnail_url }}' />
				</div>
				<div class=result_txt>
					<h2 class=result_title>
						{{ h.smart_truncate(talk.title, 64) }}<br />
					</h2>
					{{ h.smart_truncate(talk.description, 96) }}<br />
					{{ talk.speaker.name }} { if talk.speaker.job_title -%}{{ talk.speaker.job_title }}{%- endif %}
				</div>			
			{%- endfor %}
			
		</div>
	</div>
{% endblock %}