{% extends "base.jinja2" %}

{% block title %}Featured{% endblock %}

{% block content %}
	<div id=feat_box>
		<div class=container>
            {% if c.featured_talks %}
                {% set talk = c.featured_talks[0] %}
                <a href="{{ talk.url }}">
                <div class=feat_preview>
                    <img src='{{ talk.thumbnail_url }}' width='480' />
                </div>
                <div class=feat_titlebar>
                    Featured: {{ h.smart_truncate(talk.short_title, 34) }}
                </div>
                <div class=feat_info>
                    {% include 'talk.inc.jinja2' %}
                </div>
                </a>
            {% endif %}
		</div>
	</div>

	<div class=container id=sheet_container>
		<div class=sheet>
			{% for talk in c.featured_talks if talk %}
            <div class="result">
                <a href="{{ talk.url }}">
                    <div class="result_preview">
                        <img src='{{ talk.thumbnail_url }}' width='70' />
                    </div>
                    <div class="result_txt">
                        <h2 class=result_title>
                            {{ h.smart_truncate(talk.title, 64) }}<br />
                        </h2>
                        {{ h.smart_truncate(talk.description, 90) }}<br />
                        {% for speaker in talk.speakers %}
                            {{ speaker.name }}{% if speaker.job_title -%} {{ speaker.job_title }}{%- endif %},
                        {% endfor %}
                    </div>
                </a>
            </div>
			{% else %}
                no featured talks just yet, sorry!
			{% endfor %}
		</div>
	</div>
{% endblock %}
