{% extends "base.jinja2" %}

{% block content -%}

<%!
    from hackertalks.model.forms import login_form, openid_login_form
%>
<div class="yui-b content">
    <h1>Login</h1>
    {{ h.accountforms.login_form(action=url('account_login'))}}
    <p>{{ h.link_to('Forgot your password?', url=url('forgot_password')) }}</p>
    
    <h1>Login with OpenID</h1>
    {{h.accountforms.openid_login_form(action=url('openid_login'))}}
</div>
<%def name="title()">${parent.title()} - ${_('Login')}</%def>
<%inherit file="../layout.mako" />

{%- endblock content %}
